# Blockchain Network Configuration
NETWORK_NAME=mainnet
NETWORK_URL=https://mainnet.infura.io/v3/${INFURA_PROJECT_ID}
CHAIN_ID=1
PRIVATE_KEY=${CONTRACT_DEPLOYER_PRIVATE_KEY} # Private key for deploying contracts (keep secure!)
FALLBACK_NETWORK_URLS=https://mainnet.alchemyapi.io/v2/${ALCHEMY_API_KEY},https://rpc.ankr.com/eth/${ANKR_API_KEY} # Multiple fallback RPCs for redundancy
GAS_LIMIT=6000000 # Increased gas limit to accommodate complex transactions
GAS_PRICE_GWEI=60 # Adjusted gas price to reflect current network conditions
GAS_PRICE_ORACLE_ENDPOINT=https://gasstation-mainnet.matic.network/v2 # Added gas price oracle for dynamic pricing

# Smart Contract Addresses
AUTO_LISTING_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
CROSS_CHAIN_BRIDGE_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
PRICE_ORACLE_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
COMPLIANCE_REGISTRY_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
LIQUIDITY_POOL_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000 # Added for exchange liquidity management

# Exchange API Configuration
EXCHANGE_API_CONFIG_PATH=./config/exchanges.json # Path to expanded exchanges.json with 19 exchanges
EXCHANGE_API_TIMEOUT=20000 # Increased timeout to handle more exchanges
EXCHANGE_API_RETRY_INTERVAL=3000 # Increased retry interval for stability
EXCHANGE_API_CONCURRENCY_LIMIT=10 # Added to limit concurrent API calls to prevent rate limiting
EXCHANGE_API_RATE_LIMITER_ENABLED=true # Enable rate limiter for exchange APIs
EXCHANGE_API_RATE_LIMIT_PER_MINUTE=100 # Max API calls per minute across all exchanges

# Price Oracle Configuration
PRICE_ORACLE_ENDPOINT=https://oracle.revolutica.io/api/v1/price
PRICE_CHECK_INTERVAL=15 # Reduced interval for more frequent price updates
PRICE_ORACLE_BACKUP_ENDPOINTS=https://backup-oracle.revolutica.io/api/v1/price,https://chainlink-oracle.api/price # Multiple backup oracles
PRICE_ORACLE_CACHE_DURATION=300 # Cache duration in seconds for price data
PRICE_ORACLE_FAILOVER_THRESHOLD=3 # Number of failed attempts before switching to backup

# Cross-Chain Configuration
SUPPORTED_CHAINS=1,25,56,66,100,128,137 # Expanded to include Cronos (25), OKX Chain (66), Huobi ECO Chain (128), Polygon (137)
BRIDGE_RELAYER_ADDRESS=0x0000000000000000000000000000000000000000
BRIDGE_TIMEOUT=10800 # Increased timeout to 3 hours for cross-chain reliability
BRIDGE_RELAYER_API_KEY=${BRIDGE_RELAYER_API_KEY} # Environment variable for relayer authentication
BRIDGE_RELAYER_BACKUP_ADDRESS=0x0000000000000000000000000000000000000000 # Added backup relayer address
BRIDGE_CONFIRMATION_BLOCKS=12 # Number of blocks to wait for cross-chain confirmation

# Security Configuration
QUANTUM_RESISTANCE_ENABLED=true
ZKP_LIBRARY=circom # Options: circom, snarkjs, zokrates
ECDSA_SIGNER_PRIVATE_KEY=${ECDSA_SIGNER_PRIVATE_KEY} # Environment variable for quantum-resistant signatures
ZKP_PROOF_GENERATOR_URL=https://zkp.revolutica.io/generate
ZKP_PROOF_VERIFIER_URL=https://zkp.revolutica.io/verify # Added verifier endpoint for ZKP
SECURITY_AUDIT_INTERVAL=604800 # Weekly security audits in seconds (7 days)

# AI Compliance Engine Configuration
COMPLIANCE_AI_ENDPOINT=https://compliance.revolutica.io/api/v2
COMPLIANCE_API_KEY=${COMPLIANCE_API_KEY}
COMPLIANCE_CHECK_INTERVAL=180 # Reduced interval for stricter compliance with more exchanges
COMPLIANCE_BACKUP_ENDPOINT=https://backup-compliance.revolutica.io/api/v2
COMPLIANCE_FAILOVER_ENABLED=true # Enable failover for compliance checks
COMPLIANCE_REGION_CHECK_ENABLED=true # Enable region-specific compliance checks
COMPLIANCE_KYC_THRESHOLD=0.95 # Confidence score threshold for KYC verification

# Governance Dashboard Configuration
DASHBOARD_URL=https://dashboard.revolutica.io
DASHBOARD_API_KEY=${DASHBOARD_API_KEY}
DASHBOARD_PORT=3000
DASHBOARD_SSL_ENABLED=true # Enabled SSL for production
DASHBOARD_MONITORING_ENABLED=true # Added to monitor exchange API health
DASHBOARD_ALERT_EMAIL=alerts@revolutica.io # Email for dashboard alerts

# Docker and Deployment Configuration
DOCKER_IMAGE_NAME=pi-autosync-stablelist
DOCKER_TAG=v2.0.0 # Updated version for new features
DEPLOYMENT_ENV=production
DOCKER_REGISTRY_URL=https://registry.revolutica.io
DOCKER_REGISTRY_AUTH_TOKEN=${DOCKER_REGISTRY_AUTH_TOKEN} # Added for private registry authentication
DEPLOYMENT_HEALTHCHECK_INTERVAL=300 # Health check interval in seconds for deployed containers

# Logging and Debugging
LOG_LEVEL=debug # Set to debug for detailed logs during testing
LOG_FILE_PATH=./logs/pi_autosync_stablelist.log
LOG_MAX_SIZE=20971520 # Increased to 20MB for more exchanges
LOG_BACKUP_COUNT=10 # Increased to 10 backups for robustness
LOG_MONITORING_ENDPOINT=https://logs.revolutica.io/api/v1 # Added for centralized log monitoring

# Pi Network Specific Configuration
PI_COIN_SYMBOL=PI
PI_COIN_FIXED_VALUE=314159000000000000000000
PI_NETWORK_NODE=https://pi-network-node.revolutica.io/api/v1
PI_NETWORK_API_KEY=${PI_NETWORK_API_KEY}
PI_NETWORK_WALLET_ADDRESS=0x0000000000000000000000000000000000000000 # Added for Pi Network interactions
PI_NETWORK_CONFIRMATION_BLOCKS=6 # Number of blocks for Pi Network transaction confirmation

# Backup and Recovery
BACKUP_CONFIG_PATH=./config/backup.json
BACKUP_INTERVAL=43200 # Reduced to 12 hours for more frequent backups
BACKUP_STORAGE_URL=https://backup.revolutica.io/api/v1 # Added for offsite backup storage
BACKUP_ENCRYPTION_KEY=${BACKUP_ENCRYPTION_KEY} # Added for encrypted backups
BACKUP_RETENTION_DAYS=30 # Retention period for backups

# Monitoring and Alerts
MONITORING_ENABLED=true # Enable monitoring for exchange and chain health
MONITORING_ENDPOINT=https://monitoring.revolutica.io/api/v1 # Centralized monitoring endpoint
ALERT_THRESHOLD_EXCHANGE_DOWN=2 # Number of failed API calls before alerting
ALERT_SLACK_WEBHOOK=${SLACK_WEBHOOK_URL} # Added for Slack notifications
ALERT_EMAIL_LIST=ops@revolutica.io,dev@revolutica.io # Email list for alerts
