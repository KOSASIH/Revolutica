# Blockchain Network Configuration
NETWORK_NAME=mainnet
NETWORK_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
CHAIN_ID=1
PRIVATE_KEY=your_private_key_here # Private key for deploying contracts (keep secure!)
FALLBACK_NETWORK_URL=https://mainnet.alchemyapi.io/v2/YOUR_ALCHEMY_API_KEY # Fallback RPC for redundancy
GAS_LIMIT=5000000 # Gas limit for contract transactions
GAS_PRICE_GWEI=50 # Gas price in Gwei

# Smart Contract Addresses
AUTO_LISTING_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
CROSS_CHAIN_BRIDGE_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
PRICE_ORACLE_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
COMPLIANCE_REGISTRY_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# Exchange API Configuration
EXCHANGE_API_CONFIG_PATH=./config/exchanges.json
EXCHANGE_API_TIMEOUT=15000 # Timeout in milliseconds for exchange API calls
EXCHANGE_API_RETRY_INTERVAL=2000 # Interval in milliseconds between retries

# Price Oracle Configuration
PRICE_ORACLE_ENDPOINT=https://oracle.revolutica.io/api/v1/price
PRICE_CHECK_INTERVAL=30 # Interval in seconds for price oracle checks
PRICE_ORACLE_BACKUP_ENDPOINT=https://backup-oracle.revolutica.io/api/v1/price # Backup oracle for redundancy

# Cross-Chain Configuration
SUPPORTED_CHAINS=1,56,100,137 # Comma-separated chain IDs (Ethereum=1, BSC=56, Stellar=100, Polygon=137)
BRIDGE_RELAYER_ADDRESS=0x0000000000000000000000000000000000000000
BRIDGE_TIMEOUT=7200 # Timeout in seconds for cross-chain requests (2 hours)
BRIDGE_RELAYER_API_KEY=your_relayer_api_key_here # API key for relayer authentication

# Security Configuration
QUANTUM_RESISTANCE_ENABLED=true
ZKP_LIBRARY=circom # Options: circom, snarkjs, zokrates
ECDSA_SIGNER_PRIVATE_KEY=your_signer_private_key_here # Private key for quantum-resistant signatures
ZKP_PROOF_GENERATOR_URL=https://zkp.revolutica.io/generate # Endpoint for ZKP proof generation

# AI Compliance Engine Configuration
COMPLIANCE_AI_ENDPOINT=https://compliance.revolutica.io/api/v2
COMPLIANCE_API_KEY=your_compliance_api_key_here
COMPLIANCE_CHECK_INTERVAL=300 # Interval in seconds for compliance checks
COMPLIANCE_BACKUP_ENDPOINT=https://backup-compliance.revolutica.io/api/v2 # Backup compliance endpoint

# Governance Dashboard Configuration
DASHBOARD_URL=https://dashboard.revolutica.io
DASHBOARD_API_KEY=your_dashboard_api_key_here
DASHBOARD_PORT=3000 # Port for local dashboard in development
DASHBOARD_SSL_ENABLED=false # Enable SSL for dashboard in production

# Docker and Deployment Configuration
DOCKER_IMAGE_NAME=pi-autosync-stablelist
DOCKER_TAG=v1.0.0 # Versioned tag for production
DEPLOYMENT_ENV=production # Options: development, testing, production
DOCKER_REGISTRY_URL=https://registry.revolutica.io # Optional private registry

# Logging and Debugging
LOG_LEVEL=info # Options: debug, info, warn, error
LOG_FILE_PATH=./logs/pi_autosync_stablelist.log
LOG_MAX_SIZE=10485760 # Max log file size in bytes (10MB)
LOG_BACKUP_COUNT=5 # Number of log file backups

# Pi Network Specific Configuration
PI_COIN_SYMBOL=PI
PI_COIN_FIXED_VALUE=314159000000000000000000 # Fixed value in wei (314159 * 10^18)
PI_NETWORK_NODE=https://pi-network-node.revolutica.io/api/v1
PI_NETWORK_API_KEY=your_pi_network_api_key_here # API key for Pi Network node

# Backup and Recovery
BACKUP_CONFIG_PATH=./config/backup.json # Path for backup configuration
BACKUP_INTERVAL=86400 # Interval in seconds for config backups (24 hours)
