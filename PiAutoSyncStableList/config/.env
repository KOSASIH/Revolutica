# Blockchain Network Configuration
NETWORK_NAME=mainnet
NETWORK_URL=https://mainnet.infura.io/v3/${INFURA_PROJECT_ID}
CHAIN_ID=1
PRIVATE_KEY=${CONTRACT_DEPLOYER_PRIVATE_KEY} # Private key for deploying contracts (keep secure!)
FALLBACK_NETWORK_URLS=https://mainnet.alchemyapi.io/v2/${ALCHEMY_API_KEY},https://rpc.ankr.com/eth/${ANKR_API_KEY},https://horizon.stellar.org # Stellar Horizon for Pi Network
GAS_LIMIT=6000000
GAS_PRICE_GWEI=60
GAS_PRICE_ORACLE_ENDPOINT=https://gasstation-mainnet.matic.network/v2
STELLAR_NETWORK=public # Stellar mainnet for Pi Network
STELLAR_HORIZON_URL=https://horizon.stellar.org # Primary Stellar node
STELLAR_FEDERATION_SERVER=https://federation.pi-network-node.revolutica.io # Pi Network federation

# Smart Contract Addresses
AUTO_LISTING_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
CROSS_CHAIN_BRIDGE_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
PRICE_ORACLE_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
COMPLIANCE_REGISTRY_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
LIQUIDITY_POOL_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
STELLAR_FEDERATION_ADDRESS=federation*pi.revolutica.io # Stellar federation for Pi Network

# Exchange API Configuration
EXCHANGE_API_CONFIG_PATH=./config/exchanges.json # Path to updated exchanges.json with 25 exchanges
EXCHANGE_API_TIMEOUT=22000 # Increased for additional exchanges
EXCHANGE_API_RETRY_INTERVAL=3000
EXCHANGE_API_CONCURRENCY_LIMIT=12 # Increased to handle 25 exchanges
EXCHANGE_API_RATE_LIMITER_ENABLED=true
EXCHANGE_API_RATE_LIMIT_PER_MINUTE=120 # Adjusted for more exchanges

# Price Oracle Configuration
PRICE_ORACLE_ENDPOINT=https://oracle.revolutica.io/api/v1/price
PRICE_CHECK_INTERVAL=10 # Reduced for high-value Pi Coin ($314,159)
PRICE_ORACLE_BACKUP_ENDPOINTS=https://backup-oracle.revolutica.io/api/v1/price,https://chainlink-oracle.api/price,https://stellar-oracle.api/price
PRICE_ORACLE_CACHE_DURATION=300
PRICE_ORACLE_FAILOVER_THRESHOLD=3
PI_COIN_PRICE_USD=314159 # Added to enforce 1 PI = $314,159
PRICE_ORACLE_PI_COIN_TICKER=PI # Added for Pi Coin price tracking

# Cross-Chain Configuration
SUPPORTED_CHAINS=1,25,56,66,100,128,137 # Includes Stellar (100) for Pi Network
BRIDGE_RELAYER_ADDRESS=0x0000000000000000000000000000000000000000
BRIDGE_TIMEOUT=10800
BRIDGE_RELAYER_API_KEY=${BRIDGE_RELAYER_API_KEY}
BRIDGE_RELAYER_BACKUP_ADDRESS=0x0000000000000000000000000000000000000000
BRIDGE_CONFIRMATION_BLOCKS=12
STELLAR_BRIDGE_ACCOUNT=${STELLAR_BRIDGE_ACCOUNT} # Stellar address (G...) for Pi Network bridging
STELLAR_BRIDGE_CONFIRMATIONS=5 # Stellar confirmation time (seconds)

# Security Configuration
QUANTUM_RESISTANCE_ENABLED=true
ZKP_LIBRARY=circom
ECDSA_SIGNER_PRIVATE_KEY=${ECDSA_SIGNER_PRIVATE_KEY}
ZKP_PROOF_GENERATOR_URL=https://zkp.revolutica.io/generate
ZKP_PROOF_VERIFIER_URL=https://zkp.revolutica.io/verify
SECURITY_AUDIT_INTERVAL=604800
PI_COIN_SIGNATURE_VALIDATION=true # Added for Pi Coin transaction validation

# AI Compliance Engine Configuration
COMPLIANCE_AI_ENDPOINT=https://compliance.revolutica.io/api/v2
COMPLIANCE_API_KEY=${COMPLIANCE_API_KEY}
COMPLIANCE_CHECK_INTERVAL=180
COMPLIANCE_BACKUP_ENDPOINT=https://backup-compliance.revolutica.io/api/v2
COMPLIANCE_FAILOVER_ENABLED=true
COMPLIANCE_REGION_CHECK_ENABLED=true
COMPLIANCE_KYC_THRESHOLD=0.95
COMPLIANCE_PI_COIN_CHECK=true # Added for Pi Coin-specific compliance

# Governance Dashboard Configuration
DASHBOARD_URL=https://dashboard.revolutica.io
DASHBOARD_API_KEY=${DASHBOARD_API_KEY}
DASHBOARD_PORT=3000
DASHBOARD_SSL_ENABLED=true
DASHBOARD_MONITORING_ENABLED=true
DASHBOARD_ALERT_EMAIL=alerts@revolutica.io
DASHBOARD_PI_COIN_MONITORING=true # Added for Pi Coin price and wallet monitoring

# Docker and Deployment Configuration
DOCKER_IMAGE_NAME=pi-autosync-stablelist
DOCKER_TAG=v2.2.0 # Updated for Pi Coin value and new exchanges
DEPLOYMENT_ENV=production
DOCKER_REGISTRY_URL=https://registry.revolutica.io
DOCKER_REGISTRY_AUTH_TOKEN=${DOCKER_REGISTRY_AUTH_TOKEN}
DEPLOYMENT_HEALTHCHECK_INTERVAL=300

# Logging and Debugging
LOG_LEVEL=debug
LOG_FILE_PATH=./logs/pi_autosync_stablelist.log
LOG_MAX_SIZE=20971520
LOG_BACKUP_COUNT=10
LOG_MONITORING_ENDPOINT=https://logs.revolutica.io/api/v1

# Pi Network Specific Configuration
PI_COIN_SYMBOL=PI
PI_COIN_FIXED_VALUE=314159000000000000000000 # 314,159 * 10^18 (wei equivalent for consistency)
PI_COIN_PRICE_USD=314159 # Explicitly set to $314,159 per Pi Coin
PI_NETWORK_NODE=https://pi-network-node.revolutica.io/api/v1
PI_NETWORK_API_KEY=${PI_NETWORK_API_KEY}
PI_NETWORK_WALLET_ADDRESS=${PI_NETWORK_WALLET_ADDRESS} # Stellar address starting with G
PI_NETWORK_CONFIRMATION_BLOCKS=5
PI_NETWORK_FEDERATION_SERVER=https://federation.pi-network-node.revolutica.io

# Backup and Recovery
BACKUP_CONFIG_PATH=./config/backup.json
BACKUP_INTERVAL=43200
BACKUP_STORAGE_URL=https://backup.revolutica.io/api/v1
BACKUP_ENCRYPTION_KEY=${BACKUP_ENCRYPTION_KEY}
BACKUP_RETENTION_DAYS=30

# Monitoring and Alerts
MONITORING_ENABLED=true
MONITORING_ENDPOINT=https://monitoring.revolutica.io/api/v1
ALERT_THRESHOLD_EXCHANGE_DOWN=2
ALERT_SLACK_WEBHOOK=${SLACK_WEBHOOK_URL}
ALERT_EMAIL_LIST=ops@revolutica.io,dev@revolutica.io
ALERT_PI_COIN_PRICE_THRESHOLD=10000 # Alert if Pi Coin price deviates by $10,000
